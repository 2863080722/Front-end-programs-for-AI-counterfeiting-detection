page {
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.scrollarea {
  flex: 1;
  overflow-y: hidden;
  background: #f5f5f5;
}
.container {
  display: flex;
  flex: 1;
  flex-direction: column;
  justify-content: flex-start;
}
image{
  width:100%;
  height:100%;
}
.main{
  width:100%;
  box-sizing: border-box;
}
.card{
  width:90%;
  box-shadow: 0 0 10rpx rgba(0,0,0,0.1);
  margin:30rpx auto;
  border-radius: 20rpx;
  padding:20rpx;
  box-sizing: border-box;
  background: #fff;
  z-index:3;
}
.userinfo{
  height:200rpx;
  padding:60rpx 40rpx;
  box-sizing: border-box;
  display: flex;
  background: #fff;
}
.userinfo .img{
  width:107rpx;
  height:107rpx;
  margin-right:20rpx;
  border-radius: 50%;
  background: #eaeaea;
  overflow: hidden;
}
.userinfo .img image{
  width:100%;
  height:100%;
}
.userinfo .text{
  width:calc(100% - 127rpx);
}
.userinfo .text .userinfo-nickname{
  font-size: 34rpx;
  font-weight: bold;
  float:left;
  line-height: 70rpx;
}
.userinfo .text .level{
  float:left;
  margin-left:30rpx;
  border-radius: 15.5rpx;
  background: #FFAC63;
  height:30rpx;
  line-height: 30rpx;
  padding:0 10rpx;
  color:#fff;
  font-size: 18rpx;
  margin-top:20rpx;
}
.userinfo .text .level image{
  width:16rpx;
  height:14rpx;
  margin-top:8rpx;
}
.userinfo .text .tel{
  width:100%;
  color:#999999;
  font-size: 24rpx;
  line-height: 37rpx;
  float:left;
}
.title{
  height:48rpx;
  font-size: 34rpx;
  font-weight: bold;
  position: relative;
  line-height: 48rpx;
}
.title:before{
  content: "";
  display: inline-block;
  width: 6rpx;
  height: 40rpx;
  background: #d70110;
  margin-top: 4rpx;
  margin-right: 10rpx;
}
.title .more{
  position: absolute;
  right:0;
  top:0;
  color:#afafaf;
  font-size: 24rpx;
  line-height: 48rpx;
}
.title .more image{
    width:11rpx;
    height: 20rpx;
    margin-left:10rpx;
}
.info_list_child{
  border-bottom:1px solid #f2f2f2;
  height:100rpx;
  padding:26rpx 0;
  display: flex;
  box-sizing: border-box;
}
.info_list_child:last-child{
  border-bottom:none;
}
.info_list_child .icon{
  width:48rpx;
  height:48rpx;
  margin-right:10rpx;
}
.info_list_child view{
  line-height: 48rpx;
}
.info_list_child .info-name{
  font-size: 28rpx;
  width:calc(100% - 58rpx - 30rpx);
}
.info_list_child .answer{
  font-size: 28rpx;
}
.info_list_child .answer .red{
  color:#D70110;
}
.info_list_child .right{
  width:11rpx;
  height:20rpx;
  margin-top:15rpx;
  margin-left:19rpx;
}
