<view class="main">
    <scroll-view scroll-y class="scroll-view">
        <view class="item-card">
            <view class="item-image">
                <image class="image" src='../../images/media.png'></image>
            </view>
            <view class="item-text1">(为保证准确性,请上传原文件）</view>
            <view class="item-text2">移动端上传文件需选择聊天框文件进行上传</view>
        </view>
        <button class="button" bindtap="showModal">选择算法</button>
        <button class="button" bindtap="chooseMessageFile">上传文件</button>
        <view class="modal">
          <modal visible="{{showModal}}">
            <view class="modal-content">
             <view>算法选择：</view>
              <button class="button" bindtap="handleButton1">MVSS</button>
              <button class="button" bindtap="handleButton2">MABC</button>
              <button class="button" bindtap="handleButton3">OSN</button>
              <button class="button" bindtap="handleButton4">W2V</button>
              <button class="button" bindtap="handleButton5">tradition</button>
            </view>
          </modal>
        </view>
    </scroll-view>
</view>